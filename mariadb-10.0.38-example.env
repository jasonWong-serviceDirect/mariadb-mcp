# MariaDB 10.0.38 Environment Configuration
# Optimized settings for compatibility with MariaDB 10.0.38

# Database Connection Settings
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=your_username
MARIADB_PASSWORD=your_password
MARIADB_DATABASE=your_default_database

# Security Settings
MARIADB_ALLOW_INSERT=false
MARIADB_ALLOW_UPDATE=false
MARIADB_ALLOW_DELETE=false

# Performance Settings - Conservative for 10.0.38
MARIADB_TIMEOUT_MS=10000
MARIADB_ROW_LIMIT=1000

# Debug Settings
MARIADB_DEBUG_SQL=false

# MariaDB 10.0.38 Specific Notes:
# - This version was released in January 2019 and was the final release of the 10.0 series
# - JSON functions are not available in this version
# - Window functions are not supported
# - Some newer authentication plugins may not be available
# - Use traditional SQL syntax for maximum compatibility 